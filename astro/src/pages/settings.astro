---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Settings - OpenAI Sidebar Template">
  <div>
    <h1 class="text-4xl font-semibold text-content-primary dark:text-content-inverse mb-8">
      Settings
    </h1>
    
    <div class="max-w-2xl">
      <div class="space-y-8">
        <div class="bg-surface dark:bg-brand-900 border border-brand-200 dark:border-brand-700 rounded-lg p-6">
          <h2 class="text-xl font-semibold text-content-primary dark:text-content-inverse mb-4">
            Appearance
          </h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <label class="text-sm font-medium text-content-primary dark:text-content-inverse">
                  Dark Mode
                </label>
                <p class="text-sm text-content-secondary dark:text-brand-300">
                  Toggle between light and dark themes
                </p>
              </div>
              <button class="relative inline-flex h-6 w-11 items-center rounded-full bg-brand-200 dark:bg-brand-700">
                <span class="inline-block h-4 w-4 transform rounded-full bg-white transition"></span>
              </button>
            </div>
          </div>
        </div>
        
        <div class="bg-surface dark:bg-brand-900 border border-brand-200 dark:border-brand-700 rounded-lg p-6">
          <h2 class="text-xl font-semibold text-content-primary dark:text-content-inverse mb-4">
            Navigation
          </h2>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <div>
                <label class="text-sm font-medium text-content-primary dark:text-content-inverse">
                  Sidebar Auto-collapse
                </label>
                <p class="text-sm text-content-secondary dark:text-brand-300">
                  Automatically collapse sidebar on mobile
                </p>
              </div>
              <input type="checkbox" class="rounded border-brand-300 dark:border-brand-600" checked />
            </div>
          </div>
        </div>
        
        <div class="bg-surface dark:bg-brand-900 border border-brand-200 dark:border-brand-700 rounded-lg p-6">
          <h2 class="text-xl font-semibold text-content-primary dark:text-content-inverse mb-4">
            Advanced
          </h2>
          <div class="space-y-4">
            <div>
              <label class="text-sm font-medium text-content-primary dark:text-content-inverse">
                Custom CSS
              </label>
              <p class="text-sm text-content-secondary dark:text-brand-300 mb-2">
                Add custom CSS for advanced styling
              </p>
              <textarea 
                class="w-full px-3 py-2 border border-brand-300 dark:border-brand-600 rounded-md bg-surface dark:bg-brand-800 text-content-primary dark:text-content-inverse" 
                rows="4" 
                placeholder="/* Your custom CSS here */"
              ></textarea>
            </div>
          </div>
        </div>
        
        <div class="flex gap-3">
          <button class="bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors">
            Save Changes
          </button>
          <button class="border border-brand-300 dark:border-brand-600 text-content-primary dark:text-content-inverse px-6 py-3 rounded-md hover:bg-surface-hover dark:hover:bg-brand-800 transition-colors">
            Reset to Defaults
          </button>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>