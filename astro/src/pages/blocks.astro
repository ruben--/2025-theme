---
import BaseLayout from '../layouts/BaseLayout.astro';
import StatsSection from '../components/blocks/StatsSection';
import Hero from '../components/blocks/Hero';
import statsData from '../data/blocks/stats-section.json';
import heroData from '../data/blocks/hero.json';
---

<BaseLayout 
  title="Blocks - OpenAI Sidebar Template"
  description="Reusable content blocks and components for building pages."
>
  <div>
    <h1 class="text-4xl font-semibold text-content-primary mb-8">
      Blocks
    </h1>
    
    <div class="w-full h-1 bg-orange-500 my-8" style="height: 4px;"></div>
    <Hero 
      client:load
      content={heroData}
    />
    <div class="w-full h-1 bg-orange-500 my-8" style="height: 4px;"></div>
    
    <StatsSection 
      client:load
      title={statsData.title}
      description={statsData.description} 
      stats={statsData.stats}
    />
    <div class="w-full h-1 bg-orange-500 my-8" style="height: 4px;"></div>
  </div>
</BaseLayout>